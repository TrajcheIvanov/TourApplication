@model IEnumerable<TourApplication.ViewModels.HotelOverviewModel>

@{
    ViewData["Title"] = "Overview";
}

<h1>Overview</h1>
<div class="row">

    <div class="col-md-6 offset-6">
        <form asp-controller="Hotel" asp-action="Overview" method="get">
            <div class="form-group">
                <label class="control-label">Search Filter</label>
                <input type="text" class="form-control" name="filter" />
            </div>
            <div class="form-group text-right">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>

    </div>
    

    @foreach (var item in Model)
    {
        <div class="card col-md-3 p-2" style="width: 18rem;">
            <img src="@item.ImageUrl" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p class="card-text"> @item.Destination </p>
                <a asp-controller="Hotel" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">More info...</a>
            </div>
        </div>
    }

</div>
